# OpenSSL configuration for MongoDB Atlas compatibility
#
# Ubuntu 24.04 and newer Debian-based systems have OpenSSL compiled with
# DOPENSSL_TLS_SECURITY_LEVEL=2, which is incompatible with MongoDB Atlas.
# This configuration lowers the security level to 1 to allow connections.
#
# Reference: https://www.mongodb.com/community/forums/t/ubuntu-24-04-openssl-security-level-2-incompatibility-with-atlas-ssl-alert-80/324637

openssl_conf = openssl_init

[openssl_init]
ssl_conf = ssl_sect

[ssl_sect]
system_default = system_default_sect

[system_default_sect]
CipherString = DEFAULT@SECLEVEL=1
