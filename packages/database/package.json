    "create-indexes": "tsx src/scripts/create-indexes.ts"
  },
  "dependencies": {
    "@action-atlas/types": "workspace:*",
    "mongodb": "^6.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2"
  }
}
