{
  "name": "@action-atlas/database",
  "version": "0.1.0",
  "private": true,
  "description": "MongoDB client and schemas for Action Atlas",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
