{
  "name": "action-atlas",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered semantic search engine for discovering volunteering activities",
  "license": "TBD",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.0.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:watch": "turbo run test:watch",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "postinstall": "bash scripts/download-data.sh",
    "data:download": "bash scripts/download-data.sh",
    "data:upload": "bash scripts/upload-data-release.sh",
    "data:verify": "bash scripts/verify-data-checksum.sh",
    "data:clean": "rm -f data/seed-dataset.agz",
    "data:update": "pnpm data:clean && pnpm data:download",
    "data:info": "ls -lh data/seed-dataset.agz 2>/dev/null || echo 'Data file not found - run: pnpm data:download'",
    "setup": "bash scripts/setup-dev-environment.sh",
    "db:seed": "tsx scripts/seed.ts",
    "db:generate-embeddings": "tsx scripts/generate-embeddings.ts",
    "db:create-indexes": "tsx scripts/create-indexes.ts"
  },
  "devDependencies": {
    "@turbo/gen": "^2.0.0",
    "@types/node": "^20.0.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "turbo": "^2.0.0",
    "typescript": "^5.7.0"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.7.0"
    }
  }
}
