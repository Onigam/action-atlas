{
  "name": "action-atlas",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered semantic search for volunteering activities",
  "author": "Action Atlas Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.5",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "test:integration": "turbo test:integration",
    "test:e2e": "turbo test:e2e",
    "test:watch": "turbo test:watch",
    "type-check": "turbo type-check",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "setup": "tsx --tsconfig scripts/tsconfig.json scripts/setup-dev.ts",
    "seed": "tsx --tsconfig scripts/tsconfig.json scripts/seed-database.ts",
    "generate-embeddings": "tsx --tsconfig scripts/tsconfig.json scripts/generate-embeddings.ts",
    "create-indexes": "tsx --tsconfig scripts/tsconfig.json scripts/create-indexes.ts",
    "migrate-data": "tsx --tsconfig scripts/tsconfig.json scripts/migrate-legacy-data.ts",
    "db:status": "tsx --tsconfig scripts/tsconfig.json scripts/check-database.ts",
    "db:reset": "tsx --tsconfig scripts/tsconfig.json scripts/reset-database.ts",
    "convert-draftjs": "tsx --tsconfig scripts/tsconfig.json scripts/convert-draftjs-to-markdown.ts",
    "manage-vector-index": "tsx --tsconfig scripts/tsconfig.json scripts/manage-vector-index.ts"
  },
  "devDependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tsx": "^4.7.0",
    "turbo": "^1.12.4",
    "typescript": "^5.7.2",
    "vitest": "^1.2.1"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
